<html>
	<head>
		<title>UbiquityBin</title>
		<%= yield :head %>
		<%= stylesheet_link_tag :all %>
 	</head>
	<body>
		<div id="header">
			<div class="logo">
				<h2><%= link_to 'UbiquityBin', '/' %></h2>
			</div>
			<div class="links">
				<% if logged_in? %>
					Logged in as 
					<%= link_to h(current_user.login), username_path(:username => current_user.login)%> | 
					<%= link_to 'account', edit_user_path(current_user) %> | 
					<%= link_to 'logout', logout_path %>
				<% else %>
					<%= link_to 'sign up', signup_path %> | <%= link_to 'login', login_path %>
				<% end %>
			</div>
			<div class="clear"></div>
		</div>
			
		<div id="notification" style="display: none"></div>

		<div id="container">
		  <%= yield %>
		</div>

    <%= javascript_include_tag :defaults %>
    
		<% if flash[:notice] || flash[:error]%>
		  <script type="text/javascript">
		    $('notification').update("<%=flash[:notice] || flash[:error]%>").addClassName("<%= flash[:error] ? 'error' : 'info'%>").appear();
		    setTimeout(function(){$('notification').fade();}, 5000);
		  </script>
		<% end %>
	</body>
</html>